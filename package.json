interface Product {
  id: string;
  name: string;
  price: number;
  purchasePrice: number;
  stock: number;
  category: string;
  barcode: string;
  description: string;
}

interface Transaction {
  id: string;
  date: string;
  items: TransactionItem[];
  total: number;
  paymentMethod: string;
  customerName?: string;
  discount: number;
  tax: number;
  cashier: string;
}

interface TransactionItem {
  product: Product;
  quantity: number;
  subtotal: number;
}

interface User {
  id: string;
  username: string;
  role: 'admin' | 'manager' | 'cashier';
  name: string;
}

interface Customer {
  id: string;
  name: string;
  phone: string;
  email?: string;
  points: number;
  totalSpent: number;
  joinDate: string;
}

interface Supplier {
  id: string;
  name: string;
  contact: string;
  address: string;
  products: string[];
}

